<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- My CSS -->
    <link rel="stylesheet" href="assets/css/style2.css" />
    <title>SignUp</title>
  </head>
  <body>
    <div id="card" class="p-5 m-3">
      <h1 class="text-center mb-4">Kampus Merdeka</h1>
      <div id="form-signup" class="mb-4">
        <div class="mb-3">
          <label for="name" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            aria-describedby="emailHelp"
          />
          <div id="emailHelp" class="form-text">
            We'll never share your email with anyone else.
          </div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
          />
        </div>
        <button
          type="submit"
          class="btn btn-custom mt-2"
          onclick="signupButton()"
        >
          SignUp
        </button>
      </div>
      <p class="text-center">
        Already have an account?
        <a href="/login" class="text-decoration-none">Login now!</a>
      </p>
    </div>

    <!-- Sweetalert2 -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
      function sleep(ms) {
        return new Promise((resolve) => setTimeout(resolve, ms));
      }
      async function signupButton() {
        let name = document.getElementById("name").value;
        let username = document.getElementById("username").value;
        let email = document.getElementById("email").value;
        let password = document.getElementById("password").value;

        let settingPost = {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            name: name,
            username: username,
            email: email,
            password: password,
          }),
        };
        let url = "http://localhost:3000/api/auth/signup";
        await fetch(url, settingPost)
          .then((response) => response.json())
          .then((data) => {
            if (data.statusCode === 200) {
              Swal.fire({
                position: "top-end",
                icon: "success",
                title: "Signup Succes :)",
                showConfirmButton: false,
                timer: 1000,
              });
              sleep(1000).then(() => {
                window.location.href = "/login";
              });
            } else if (data.statusCode === 502) {
              Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Username or Email already exists!",
              });
            } else if (data.statusCode === 402) {
              Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Please fill all the fields!",
              });
            } else {
              Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Signup Failed :(",
              });
            }
          });
      }
    </script>
  </body>
</html>
